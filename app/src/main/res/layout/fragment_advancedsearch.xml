<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/advancedSearchLayout"
    android:focusableInTouchMode="true">

    <include layout="@layout/toolbar_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/loginlin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="@string/category"
                android:id="@+id/category_label"
                android:textColor="@color/black2"
                android:textSize="16sp" />

            <AutoCompleteTextView
                android:id="@+id/categoryAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="10dp"
                android:dropDownHeight="wrap_content"
                android:gravity="center_vertical"
                android:hint="@string/categoryCategory"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:lines="1"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="@string/reference_number"
                android:textColor="@color/black2"
                android:id="@+id/refnumber_label"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/etRefNumber"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/myriadpro_regular"
                android:hint="@string/reference_number"
                android:imeOptions="actionDone"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black2"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="@string/subject"
                android:textColor="@color/black2"
                android:id="@+id/subject_label"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/searchSubject"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/myriadpro_regular"
                android:hint="@string/subject"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black2"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="@string/status"
                android:textColor="@color/black2"
                android:id="@+id/status_label"
                android:textSize="16sp" />

            <AutoCompleteTextView
                android:id="@+id/statusAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="10dp"
                android:dropDownHeight="wrap_content"
                android:gravity="center_vertical"
                android:hint="@string/status"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:lines="1"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="15sp" />





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="@string/from_date"
                android:textColor="@color/black2"
                android:id="@+id/fromdate_label"
                android:textSize="16sp" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/Fromdate"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:drawableEnd="@drawable/ic_select_date"
                android:focusableInTouchMode="false"
                android:hint="@string/from_date"
                android:inputType="date"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/todate_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="@string/to_date"
                android:textColor="@color/black2"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/Todate"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:focusableInTouchMode="false"
                android:inputType="date"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="@string/to_date"
                android:drawableEnd="@drawable/ic_select_date"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="@string/priorityCategory"
                android:textColor="@color/black2"
                android:id="@+id/priority_label"
                android:textSize="16sp" />


            <AutoCompleteTextView
                android:id="@+id/priorityAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:dropDownHeight="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="10dp"
                android:hint="@string/priorityCategory"
                android:imeOptions="actionDone"
                android:lines="1"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:textSize="15sp" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="@string/sending_entity"
                android:textColor="@color/black2"
                android:id="@+id/senEntity_label"
                android:textSize="16sp" />

            <AutoCompleteTextView
                android:id="@+id/sendingEntityAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:dropDownHeight="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="10dp"
                android:hint="@string/sending_entity"
                android:imeOptions="actionDone"
                android:lines="1"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:textSize="15sp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="@string/receiving_entity"
                android:textColor="@color/black2"
                android:id="@+id/recEntity_label"
                android:textSize="16sp" />

            <AutoCompleteTextView
                android:id="@+id/receivingEntityAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:dropDownHeight="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="10dp"
                android:hint="@string/receiving_entity"
                android:imeOptions="actionDone"
                android:lines="1"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="@string/transferFrom"
                android:textColor="@color/black2"
                android:id="@+id/transfer_From_user_label"
                android:textSize="16sp" />

            <AutoCompleteTextView
                android:id="@+id/transferFromUserAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:dropDownHeight="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="10dp"
                android:hint="@string/transferFrom"
                android:imeOptions="actionDone"
                android:lines="1"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:textSize="15sp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="@string/transferTo"
                android:textColor="@color/black2"
                android:id="@+id/transfer_To_user_label"
                android:textSize="16sp" />

            <AutoCompleteTextView
                android:id="@+id/transferToUserAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:dropDownHeight="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="10dp"
                android:hint="@string/transferTo"
                android:imeOptions="actionDone"
                android:lines="1"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:textSize="15sp" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="@string/from_structure"
                android:textColor="@color/black2"
                android:id="@+id/transfer_From_structure_label"
                android:textSize="16sp" />

            <AutoCompleteTextView
                android:id="@+id/transferFromStructureAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:dropDownHeight="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="10dp"
                android:hint="@string/from_structure"
                android:imeOptions="actionDone"
                android:lines="1"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:textSize="15sp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="@string/to_structure"
                android:textColor="@color/black2"
                android:id="@+id/transfer_To_Structure_label"
                android:textSize="16sp" />

            <AutoCompleteTextView
                android:id="@+id/transferToStructureAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:dropDownHeight="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="10dp"
                android:hint="@string/to_structure"
                android:imeOptions="actionDone"
                android:lines="1"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="@string/from_transfer_date"
                android:textColor="@color/black2"
                android:id="@+id/transfer_From_date_label"
                android:textSize="16sp" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/searchDateFrom"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:drawableEnd="@drawable/ic_select_date"
                android:focusableInTouchMode="false"
                android:hint="@string/from_transfer_date"
                android:inputType="date"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="@string/to_transfer_date"
                android:textColor="@color/black2"
                android:id="@+id/transfer_to_date_label"
                android:textSize="16sp" />



            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/searchDateTo"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:focusableInTouchMode="false"
                android:inputType="date"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="@string/to_transfer_date"
                android:drawableEnd="@drawable/ic_select_date"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="Keyword"
                android:textColor="@color/black2"
                android:id="@+id/keyword_label"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/searchKeyword"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/myriadpro_regular"
                android:hint="Keyword"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black2"
                android:textSize="15sp" />






            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="OCR Content"
                android:textColor="@color/black2"
                android:id="@+id/ocr_label"
                android:textSize="16sp"
                />

            <EditText
                android:id="@+id/searchocr"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/myriadpro_regular"
                android:hint="OCR Content"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black2"
                android:textSize="15sp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:text="search in inbox of"
                android:textColor="@color/black2"
                android:id="@+id/inboxof_label"
                android:textSize="16sp" />


            <AutoCompleteTextView
                android:id="@+id/searchinboxof"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/edittext_background"
                android:dropDownHeight="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="10dp"
                android:hint="search in inbox of"
                android:imeOptions="actionDone"
                android:lines="1"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/OverdueCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="overdue"
                android:textColor="@color/black2"
                android:fontFamily="@font/myriadpro_regular"
                android:textSize="16sp"
                android:paddingEnd="12dp"
                android:layout_marginTop="15dp"
                />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:padding="30dp"
        >


        <TextView
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/reset_background"
            android:fontFamily="@font/myriadpro_simibold"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:layout_weight="1"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/reset"
            android:textColor="@color/black2"
            android:textSize="15sp"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx"
            android:visibility="invisible"/>


        <TextView
            android:id="@+id/btnSearch"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/orange_background"
            android:fontFamily="@font/myriadpro_simibold"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:layout_weight="1"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/search"
            android:textColor="@color/white"
            android:textSize="15sp"

            />


    </LinearLayout>


</LinearLayout>