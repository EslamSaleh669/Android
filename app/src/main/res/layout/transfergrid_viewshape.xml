<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/transfergrid_lin"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/transfergrid_reciever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/myriadpro_regular"
            android:gravity="start"
            android:layoutDirection="locale"
            android:maxWidth="100dp"
            android:text="eslam saleh"
            android:textColor="@color/black2"
            android:textDirection="locale"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/transfergrid_purpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/myriadpro_regular"
            android:layoutDirection="locale"
            android:maxWidth="80dp"
            android:text="for archive"
            android:textColor="@color/black2"
            android:textDirection="locale"
            android:gravity="center"
            android:textSize="15sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="12-12-2022"
            android:layoutDirection="locale"
            android:textDirection="locale"
            android:maxWidth="80dp"
            android:fontFamily="@font/myriadpro_regular"
            android:textColor="@color/black2"
            android:id="@+id/transfergrid_duedate"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"

            />
    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/deletetransgrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/delete_color"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/white_delete2"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            />
    </androidx.cardview.widget.CardView>

</LinearLayout>