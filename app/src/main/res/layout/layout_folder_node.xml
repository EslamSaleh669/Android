<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="20dp"
    android:id="@+id/folderrel"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/foldermartxt"
        android:layout_width="10dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/matgintxt"
        android:layout_width="20dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@+id/foldermartxt"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="34dp"
        android:layout_height="40dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@id/matgintxt"
        android:src="@drawable/ic_folder_icon" />

    <TextView
        android:id="@+id/node_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/icon"
        android:fontFamily="@font/myriadpro_bold"
        android:text="foldername"
        android:textColor="@color/black2"
        android:textSize="16sp" />




</RelativeLayout>