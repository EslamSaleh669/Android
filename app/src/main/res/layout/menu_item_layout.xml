<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/menu_item_width"
    android:layout_height="match_parent"
    android:layout_marginEnd="20dp"
    android:background="@color/colorPrimary"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivMenuItem"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:layout_marginTop="4dp"
        android:padding="@dimen/viewer_bottom_icons_padding"
        android:scaleType="centerInside"
        android:src="@drawable/annotation_icon" />

    <TextView
        android:id="@+id/tvMenuItem"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:layout_below="@id/ivMenuItem"
        android:gravity="center"
        android:maxLines="2"
        android:lineSpacingMultiplier="0.7"
        android:text="Annotation"
        android:textColor="@android:color/white"
        android:textSize="@dimen/menu_label_text_size" />
    </LinearLayout>

</RelativeLayout>