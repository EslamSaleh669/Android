<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        >




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layoutDirection="locale"
            android:id="@+id/tolin"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:gravity="start"
                    android:id="@+id/tolbl"
                    android:layoutDirection="locale"
                    android:textDirection="locale"
                    android:fontFamily="@font/myriadpro_simibold"
                    android:text="@string/too"
                    android:textColor="@color/black2"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:maxLength="30"
                    android:gravity="start"
                    android:layoutDirection="locale"
                    android:textDirection="locale"
                    android:fontFamily="@font/myriadpro_regular"
                    android:textColor="@color/ApplicationDarkColor"
                    android:id="@+id/transfer_reciever"
                    />


            </LinearLayout>

            <ImageView
                android:id="@+id/edittrans"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                android:layout_toStartOf="@id/deletetrans"
                android:src="@drawable/ic_viewer_edit_file" />

            <ImageView
                android:id="@+id/deletetrans"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/delete" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/purposelin"
            android:layout_below="@+id/tolin"
            android:layout_marginTop="8dp"
            android:layoutDirection="locale"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myriadpro_simibold"
                android:text="@string/purposee"
                android:textColor="@color/black2"
                android:gravity="start"
                android:id="@+id/purplbl"
                android:layoutDirection="locale"
                android:textDirection="locale"
                android:layout_marginEnd="5dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/myriadpro_regular"
                android:gravity="start"
                android:layoutDirection="locale"
                android:textDirection="locale"
                android:textColor="@color/ApplicationDarkColor"
                android:id="@+id/transfer_purpose"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/purposelin"
            android:layout_marginTop="12dp"
            android:id="@+id/datelin"
            android:layoutDirection="locale"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/myriadpro_simibold"
                android:text="@string/due_datee"
                android:gravity="start"
                android:id="@+id/duedatelbl"
                android:layoutDirection="locale"
                android:textDirection="locale"
                android:textColor="@color/black2"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="start"
                android:layoutDirection="locale"
                android:textDirection="locale"
                android:fontFamily="@font/myriadpro_regular"
                android:textColor="@color/ApplicationDarkColor"
                android:id="@+id/transfer_duedate"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/instructionlbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datelin"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/myriadpro_simibold"
            android:layoutDirection="locale"
            android:text="@string/instructionss"
            android:textColor="@color/black2"

            android:textSize="16sp" />

        <com.borjabravo.readmoretextview.ReadMoreTextView
            android:id="@+id/transfer_inst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/instructionlbl"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:layoutDirection="locale"
            android:textDirection="locale"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/myriadpro_regular"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/ApplicationDarkColor"
            android:textSize="16sp"
            app:colorClickableText="@color/appcolor"
            app:trimCollapsedText="@string/read_more"
            app:trimExpandedText="@string/read_less"
            app:trimLength="100"
            app:trimMode="trimModeLength" />


        <View
            android:id="@+id/tvieww"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/transfer_inst"
            android:layout_marginBottom="5dp"
            android:background="#707070" />
    </RelativeLayout>




</androidx.cardview.widget.CardView>