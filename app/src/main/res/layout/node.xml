<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="250dp"
    android:textDirection="locale"
    android:layoutDirection="locale"
    android:background="@drawable/tracking_view"
    android:id="@+id/nodeItem"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/appcolor"
        android:id="@+id/colorview"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/appcolor"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:singleLine="true"
        android:maxLength="30"
        android:ellipsize="end"

        android:fontFamily="@font/myriadpro_regular"
        tools:text="Node text here" />

    <TextView
        android:id="@+id/refnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black2"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLength="30"
        android:fontFamily="@font/myriadpro_regular"
        tools:text="Node text here" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="3"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/createddatetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_font"
            android:textSize="15sp"
            android:layout_weight="1"
            android:fontFamily="@font/myriadpro_regular"
            tools:text="@string/created_date" />
        <TextView
            android:id="@+id/createddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_font"
            android:textSize="15sp"
            android:layout_weight="2"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLength="15"
            android:fontFamily="@font/myriadpro_regular"
            tools:text="Node" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="3"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/createdbytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_font"
            android:textSize="15sp"
            android:layout_weight="1.2"
            android:fontFamily="@font/myriadpro_regular"
            tools:text="@string/created_by" />

        <TextView
            android:id="@+id/createdby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_font"
            android:textSize="15sp"
            android:layout_weight="1.8"
            android:singleLine="true"
            android:maxLines="2"
            android:fontFamily="@font/myriadpro_regular"
            tools:text="Node" />
    </LinearLayout>
</LinearLayout>