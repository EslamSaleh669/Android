<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:id="@+id/metadatalin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myriadpro_bold"
                android:text="@string/subject"
                android:id="@+id/subjecttxt"
                android:textColor="@color/black2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:textColor="@color/black2"
                android:textSize="16sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#707070"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/myriadpro_bold"
                android:textColor="@color/black2"
                android:textSize="16sp"
                android:id="@+id/refnumtxt"
                android:text="@string/reference_number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/myriadpro_regular"
                android:textColor="@color/black2"
                android:id="@+id/reference_number"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#707070"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/myriadpro_bold"
                android:text="@string/sending_entity"
                android:textColor="@color/black2"
                android:id="@+id/sendingentity_txt"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/myriadpro_regular"
                android:textColor="@color/black2"
                android:id="@+id/sending_entity"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#707070"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/myriadpro_bold"
                android:textColor="@color/black2"
                android:id="@+id/receivingentity_txt"
                android:textSize="16sp"
                android:text="@string/receiving_entity"/>

            <TextView
                android:id="@+id/receiving_entity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/myriadpro_regular"
                android:textColor="@color/black2"
                android:textSize="16sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#707070"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/myriadpro_bold"
                android:textColor="@color/black2"
                android:textSize="16sp"
                android:id="@+id/duetdate_txt"
                android:text="@string/due_date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/myriadpro_regular"
                android:textColor="@color/black2"
                android:id="@+id/transfer_due_date"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#707070"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/myriadpro_bold"
                android:textColor="@color/black2"
                android:textSize="16sp"
                android:id="@+id/statustxt"
                android:text="@string/status"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/myriadpro_regular"
                android:textColor="@color/black2"
                android:id="@+id/status"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#707070"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/myriadpro_bold"
                android:textColor="@color/black2"
                android:textSize="16sp"
                android:id="@+id/privacytxt"
                android:text="@string/privacy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/myriadpro_regular"
                android:textColor="@color/black2"
                android:id="@+id/privacy"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#707070"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/myriadpro_bold"
                android:textColor="@color/black2"
                android:textSize="16sp"
                android:id="@+id/prioritytxt"
                android:text="@string/priorityCategory"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/myriadpro_regular"
                android:textColor="@color/black2"
                android:id="@+id/priority"/>



        </LinearLayout>


    </ScrollView>




</LinearLayout>
