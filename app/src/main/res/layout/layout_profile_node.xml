<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/filerel"
    android:paddingTop="25dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">



    <ImageView
        android:id="@+id/icon"
        android:src="@drawable/ic_file_icon"
        android:layout_width="34dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="15dp"
        android:layout_height="37dp" />

    <TextView
        android:textSize="16sp"
        android:fontFamily="@font/myriadpro_bold"
        android:text="filename.pdf"
        android:textColor="@color/black2"
        android:layout_toEndOf="@+id/icon"
        android:id="@+id/node_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/node_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/node_value"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/icon"
        android:fontFamily="@font/myriadpro_regular"
        android:text="Tues 14/4/2022"
        android:textColor="@color/dark_gray"
        android:textSize="14sp" />



</RelativeLayout>