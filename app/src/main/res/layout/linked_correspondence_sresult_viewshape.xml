<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"

        >


        <TextView
            android:id="@+id/linkedc_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/myriadpro_simibold"
            android:text="3:45 PM"
            android:textColor="@color/appcolor3"
            android:textSize="14sp" />




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingTop="5dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            >


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/important"
                app:cardCornerRadius="2dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/linked_card">



                <TextView
                    android:id="@+id/linked_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myriadpro_regular"
                    android:text="done"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>

            <CheckBox
                android:id="@+id/linkedattach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/datalin"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black2"
                android:text="in/01000000000/2021"
                android:textSize="16sp"
                android:fontFamily="@font/myriadpro_bold"
                android:id="@+id/linked_createdby"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:text="in/01000000000/2021"
                android:textSize="14sp"
                android:fontFamily="@font/myriadpro_bold"
                android:layout_marginTop="8dp"
                android:id="@+id/linkedc_refnum"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:text="in/01000000000/2021"
                android:textSize="16sp"
                android:fontFamily="@font/myriadpro_bold"
                android:layout_marginTop="10dp"
                android:maxLength="40"
                android:id="@+id/linkedc_subject"/>



        </LinearLayout>

        <View
            android:id="@+id/vieww"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/datalin"
            android:background="#707070" />
    </RelativeLayout>




</androidx.cardview.widget.CardView>